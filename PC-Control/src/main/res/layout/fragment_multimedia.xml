<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/multimediaLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.znajde.gdzie.myapplication.MultimediaFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/volumeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:text="Volume"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/audioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Audio"
        app:layout_constraintRight_toRightOf="@+id/volumeButton"
        app:layout_constraintLeft_toLeftOf="@+id/volumeButton"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/volumeButton"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/videoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Video"
        app:layout_constraintRight_toRightOf="@+id/audioButton"
        app:layout_constraintLeft_toLeftOf="@+id/audioButton"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@+id/audioButton"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/youtubeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="YouTube"
        app:layout_constraintRight_toRightOf="@+id/videoButton"
        app:layout_constraintLeft_toLeftOf="@+id/videoButton"
        android:layout_marginTop="51dp"
        app:layout_constraintTop_toBottomOf="@+id/videoButton"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/wmpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Media Player"
        app:layout_constraintRight_toRightOf="@+id/youtubeButton"
        app:layout_constraintLeft_toLeftOf="@+id/youtubeButton"
        app:layout_constraintHorizontal_bias="0.484"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/youtubeButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>
