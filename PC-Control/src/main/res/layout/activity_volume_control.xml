<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.znajde.gdzie.myapplication.VolumeControl">

    <Button
        android:id="@+id/upButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="volumeUp"
        android:text="UP"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="133dp"
        android:layout_marginTop="42dp"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="133dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.012"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/downButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="volumeDown"
        android:text="DOWN"
        app:layout_constraintRight_toRightOf="@+id/upButton"
        app:layout_constraintLeft_toLeftOf="@+id/upButton"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@+id/upButton" />

    <Button
        android:id="@+id/muteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="volumeMute"
        android:text="MUTE"
        app:layout_constraintRight_toRightOf="@+id/unmuteButton"
        app:layout_constraintLeft_toLeftOf="@+id/unmuteButton"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/unmuteButton" />

    <Button
        android:id="@+id/unmuteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="volumeUnmute"
        android:text="UNMUTE"
        app:layout_constraintRight_toRightOf="@+id/downButton"
        app:layout_constraintLeft_toLeftOf="@+id/downButton"
        app:layout_constraintHorizontal_bias="0.0"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="21dp"
        app:layout_constraintTop_toBottomOf="@+id/downButton" />
</android.support.constraint.ConstraintLayout>
